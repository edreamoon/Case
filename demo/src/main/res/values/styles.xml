<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultTv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_bg</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:textColor">@color/common_black</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingBottom">20dp
        </item> <!-- Set the padding to adjust the space between text and indicator -->
    </style>

    <style name="SqTabText">
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <declare-styleable name="BlurView">
        <attr name="blurOverlayColor" format="color"/>
    </declare-styleable>

    <style name="HexagonStyle">
        <item name="cornerFamily">cut</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">0%</item>
        <item name="cornerSizeBottomRight">50%</item>
    </style>

</resources>