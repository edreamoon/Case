<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints,MissingDefaultResource">

    <ImageView
        android:id="@+id/cover_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/gc_girl" />

    <TextView
        android:id="@+id/attr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello"
        app:customTextSize="16sp" />


    <ScrollView
        android:id="@+id/nest_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_height="wrap_content">

                <com.ccino.demo.view.BlurBGImageView
                    android:id="@+id/blur_view"
                    android:layout_width="100dp"
                    android:layout_marginTop="200dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="50dp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@id/attr" />

                <View
                    android:id="@+id/test_view"
                    android:layout_width="100dp"
                    android:layout_marginTop="200dp"
                    android:layout_marginEnd="50dp"
                    android:background="#80000000"
                    android:layout_height="100dp" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="800dp" />
        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>