<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".media.MediaActivity"
    tools:ignore="MissingConstraints,PxUsage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".media.MediaActivity">

        <!-- 竖图 -->
        <ImageView
            android:id="@+id/ver_width_large_view"
            android:layout_width="480px"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@color/teal_200"
            android:src="@drawable/ver_w500" />

        <!-- 竖图 -->
        <ImageView
            android:id="@+id/ver_width_small_view"
            android:layout_width="480px"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:scaleType="matrix"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toBottomOf="@id/ver_width_large_view" />

        <!--        &lt;!&ndash; 竖图高比较大 &ndash;&gt;-->
        <!--        <ImageView-->
        <!--            android:id="@+id/ver_height_view"-->
        <!--            android:layout_width="480px"-->
        <!--            android:layout_height="960px" />-->

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>